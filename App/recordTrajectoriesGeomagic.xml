<application>
    <name>recordTrajectoriesGeomagic</name>
    <description>Module to record several trajectories using the Geomagic Touch with icubGazebo</description>
    <version>1.0</version>

<module>
        <name>wholeBodyDynamicsTree</name>
        <parameters>--part left_arm --autoconnect</parameters>
        <dependencies>
            <port timeout="10">/icubGazeboSim/left_arm/state:o</port>
        </dependencies>
        <node>icub01</node>
    </module>

    <module>
        <name>iKinCartesianSolver</name>
        <parameters>--robot iCubGazeboSim -context simCartesianControl --part left_arm</parameters>
        <dependencies>
            <port timeout="10">/icubGazeboSim/left_arm/state:o</port>
        </dependencies>
        <node>icub01</node>
    </module>

    <module>
        <name>simCartesianControl</name>
        <parameters>--robot icubGazeboSim</parameters>
   <dependencies>
            <port timeout="10">/cartesianSolver/left_arm/out</port>
        </dependencies>
        <node>icub01</node>
    </module>

    <module>
        <name>recordTrajectoriesWithGeomagic</name>
        <parameters></parameters>
        <stdio>icub01</stdio>
        <node>icub01</node>
    </module>
    
    
  <module>  
   <name>replayTrajectories</name>
        <parameters></parameters>
           <dependencies>
            <port timeout="10">/simCartesianControl/left_arm/command:o</port>
        </dependencies>
        <stdio>icub01</stdio>
        <node>icub01</node>
    </module>
    
    <module>
       <name>replayTrajectoriesWithGeom</name>
        <parameters></parameters>
           <dependencies>
            <port timeout="10">/simCartesianControl/left_arm/command:o</port>
            <port timeout="10">/matlab/write</port>
        </dependencies>
        <stdio>icub01</stdio>
        <node>icub01</node>
    </module>
    
     <module>  
   <name>yarpdev</name>
        <parameters>--device speech --lingware-context speech --default-language fr-FR --pitch 70 --speed 70</parameters>
           <dependencies>
        </dependencies>
        <stdio>icub01</stdio>
        <node>icub01</node>
    </module>


    <connection>
          <from>/wholeBodyDynamicsTree/left_arm/cartesianEndEffectorWrench:o</from>
          <to>/record/read</to>
          <protocol>udp</protocol>
    </connection>

    <connection>
          <from>/matlab/write</from>
          <to>/replay/read</to>
          <protocol>udp</protocol>
    </connection>
    
    <connection>
          <from>/replay/read</from>
          <to>/matlab/write</to>
          <protocol>udp</protocol>
    </connection>
    <connection>
          <from>/wholeBodyDynamicsTree/left_arm/cartesianEndEffectorWrench:o</from>
          <to>/replay/readForces</to>
          <protocol>udp</protocol>
    </connection>
    
<connection>
          <from>/matlab/write</from>
          <to>/test/read</to>
          <protocol>udp</protocol>
    </connection>
    
    <connection>
          <from>/test/read</from>
          <to>/matlab/write</to>
          <protocol>udp</protocol>
    </connection>
    <connection>
          <from>/wholeBodyDynamicsTree/left_arm/cartesianEndEffectorWrench:o</from>
          <to>/test/readForces</to>
          <protocol>udp</protocol>
    </connection>
    
        <connection>
          <from>/matlab/ispeak</from>
          <to>/icub/speech:rpc</to>
          <protocol>udp</protocol>
    </connection>

</application>
